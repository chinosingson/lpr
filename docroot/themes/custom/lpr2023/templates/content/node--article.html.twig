
<div class="container header-spacer">
<div class="row">
    <div class="col-lg-8">
        <h1>{{ label }}</h1>
        <div class="metadata-top"><h4>{{ content.field_article_type.0 }} &mdash; {{ content.field_publish_date.0 }}</h4></div>
        <div>{{ drupal_block("social_sharing_buttons_block") }}</div>
        
        {% if node.field_image.value %}
        <figure class="figure">
        <img class="img-fluid figure-img article-photo" src={{ file_url(content.field_image|field_target_entity.uri.value) }} alt={{ content.field_image|field_raw('alt') }} >
        <figcaption class="figure-caption">{{ content.field_image|field_raw('alt') }}</figcaption>
        </figure>
        {% endif %}
        
        {% if content.body %}
        {{ content.body }}
        {% endif %}
        
    
    </div>
    <div class="col-lg-4">
        {% if node.field_contact_information.value %}
        
           <h3>Contact Person</h3>  
           {{ content.field_contact_information }}
        <hr />
        {% endif %}
        

        
        {% if node.field_organization.value %}
        
           <div class="related-links">
           <h3>Organizations</h3>
              <ul class="related-links-set">
                  {{ content.field_organization }}
              </ul>    
           </div>    
        <hr />
        {% endif %}
    
        
        {% if node.field_related_content.value %}
        
           <div class="related-links">
           <h3>Related Links</h3>
              <ul class="related-links-set">
                  {{ content.field_related_content }}
              </ul>    
           </div>  
        <hr />   
        {% endif %}
    
        
        {% if node.field_focus_areas.value %}
        
           <div class="related-links">
           <h3>Focus Areas</h3>
              <ul class="related-links-set">
                  {{ content.field_focus_areas }}
              </ul>    
           </div>   
        <hr />   
        {% endif %}
        
        {% if node.field_subjects.value %}
        
           <div class="related-links">
           <h3>Subjects</h3>
              <ul class="related-links-set">
                  {{ content.field_subjects }}
              </ul>    
           </div>   
        <hr />   
        {% endif %}
        
        
        {% if node.field_topics.value %}
        
           <div class="related-links">
           <h3>Topics</h3>
              <ul class="related-links-set">
                  {{ content.field_topics }}
              </ul>    
           </div>   
        <hr />   
        {% endif %}
        
        
    </div>



</div>
</div>